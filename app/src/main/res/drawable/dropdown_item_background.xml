<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white_35" /> <!-- Background color when pressed -->
            <corners android:radius="4dp" />
            <stroke android:width="4dp" android:color="@color/white_10"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/lampa_label_bgcolor" /> <!-- Background color when focused -->
            <corners android:radius="4dp" />
            <stroke android:width="4dp" android:color="@color/teal_200"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/lampa_label_bgcolor" /> <!-- Default background color -->
            <corners android:radius="4dp" />
            <stroke android:width="4dp" android:color="@android:color/transparent"/>
        </shape>
    </item>
</selector>